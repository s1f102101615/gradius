datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  userOnRoom UserOnRoom[]
  roomId     String       @unique
  userId     String       @id
  status     String
  scenario   String[]
  nowtime    Int[]
  myposition Int[]
  bullet     String
  enemy      String
}

model UserOnRoom {
  firebaseId String
  Room       Room      @relation(fields: [roomId], references: [roomId])
  in         DateTime
  out        DateTime?
  roomId     String

  @@id([firebaseId, roomId])
}
